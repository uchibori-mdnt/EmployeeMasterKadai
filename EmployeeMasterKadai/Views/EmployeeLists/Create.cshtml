@model EmployeeMasterKadai.Models.Employee

@{
    Layout = null;
    ViewData["Title"] = "Create";

    //※※※豆知識：アクション名を取得する方法
    string action = ViewContext.RouteData.Values["Action"]!.ToString()!;
}

@*※※※bootstrapを活用してレスポンシブ対応したり行間を空けたりしましょう→詳しくは https://getbootstrap.com/*@

<h3>社員の登録</h3>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <select asp-for="Department" class="form-select"> @*bootstropのクラス*@
                    <option value="">選択してください</option>
                    <option value="DCG">DCG</option>
                    <option value="カイゼン">カイゼン</option>
                    <option value="BTG">BTG</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RetirementFlag" /> @Html.DisplayNameFor(model => model.RetirementFlag)
                </label>
            </div>
            <div class="form-group" id="RetirementDayInput">
                <label asp-for="RetirementDay" class="control-label"></label>
                <input asp-for="RetirementDay" class="form-control" type="date" />
                <span asp-validation-for="RetirementDay" class="text-danger"></span>
            </div>
          
                <div class="form-group">
                    <label asp-for="CreatedAt" class="control-label"></label>
                    @{
                        var formattedCreatedAt = DateTime.Now.ToString("yyyy年MM月dd日 hh:mm");
                    }
                    @formattedCreatedAt
                   
                </div>
            
            <div class="form-group">
                <label asp-for="UpdatedAt" class="control-label"></label>
                @{
                    var formattedUpdatedAt = DateTime.Now.ToString("yyyy年MM月dd日 hh:mm");
                }
                @formattedUpdatedAt
            </div>

            <div class="d-flex flex-row-reverse">
                <div class="p-2">
                    <input type="submit" value="※※※ボタンのキャプションはココです" class="btn btn-primary" />
                </div>
                <div class="p-2">
                    <a asp-action="Index" class="btn btn-secondary">キャンセル</a>
                </div>
            </div>
        </form>
    </div>
</div>

